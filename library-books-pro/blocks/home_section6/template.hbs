<div class="skt-builder-block-wrapper skt-builder-home-section6-block skt-builder-home-section6-block-{{id}}" style="background-color: {{blockBackgroundColor}}; background-image: url({{blockBgImageUrl}}); padding-bottom: {{blockPaddingBottom}}px; padding-top: {{blockPaddingTop}}px; {{#if blockParallaxEffect}}background-attachment: fixed;{{/if}}">
	<div class="skt-builder-block-inner skt-builder-block-inner-{{id}}" style="{{#if blockAnimation}}visibility: hidden;{{/if}}">
		<div class="skt-builder-container">
			{{#if blockTitle}}
				<div class="skt-builder-block-title" style="text-align: {{blockTitleAlign}}; {{#if blockTitleShadow}}text-shadow: 4px 4px 2px {{blockTitleShadowColor}};{{/if}}">
					<h2 style="color: {{blockTitleColor}}; font-size: {{blockTitleFontSize}}px; margin-bottom: {{blockTitleMarginBottom}}px; text-align: {{blockTitleAlign}};">{{blockTitle}}</h2>
				</div>
			{{/if}}
            <div class="contact-block-area">
            	<div class="contact-block-left">
                   {{#if blockDescription}}
                		<div class="skt-builder-block-left-description">{{{blockDescription}}}</div>
            	   {{/if}}
                   <style>
				   		.skt-builder-home-section6-block-{{id}} .formbox input,
						.skt-builder-home-section6-block-{{id}} .formbox textarea{border-color: {{formFieldBorderColor}}; color: {{formFieldTextColor}};}
						.skt-builder-home-section6-block-{{id}} .formbox ::placeholder{color: {{formFieldTextColor}}; opacity: 1;}
						.skt-builder-home-section6-block-{{id}} .formbox :-ms-input-placeholder{color: {{formFieldTextColor}};}
						.skt-builder-home-section6-block-{{id}} .formbox ::-ms-input-placeholder{color: {{formFieldTextColor}};}
                   		.skt-builder-home-section6-block-{{id}} .formbox input[type=submit]{background-color: {{formButtonBgColor}}; color: {{formButtonTextColor}};}
						.skt-builder-home-section6-block-{{id}} .formbox input[type=submit]:hover{background-color: {{formButtonHoverBgColor}}; color: {{formButtonHoverTextColor}};}
						
						
                   </style>
                   <div class="contact-block-left-area">
                   		{{#each_with_sort blockColumns "order"}}	
                        	{{#if columnIcon}}
								<span class="{{columnIcon}}" style="color:{{shapeiconColor}};"></span>
                        	{{/if}} 
                   			{{#if title}}
                            	 	<h3 class="skt-builder-column-title" style="color: {{titleColor}}; text-align: {{blockColumnsTitleAlign}};">{{title}}</h3>
                            {{/if}} 
                            {{#if columnDescription}}
                            	<div class="skt-builder-block-left-column-description">
                            		{{{columnDescription}}}
                            	</div>
                            {{/if}}
                        {{/each_with_sort}}
                   </div>				
                </div>
                <div class="contact-block-right">
                    {{#if formshortcode}}
                	<div class="formbox" style="background-color:{{formBackgroundColor}};">
                    	{{{formshortcode}}}
                    </div>
                    {{/if}}
                </div>
                <div class="clear"></div>
            </div>
		</div>
	</div>
</div>
